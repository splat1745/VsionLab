# Configuration
APP_NAME=VsionLab # Its spelled with a missing i on purpose
DEBUG=true
HOST=127.0.0.1
PORT=8000

# Storage paths
DATASETS_DIR=./data/datasets
UPLOADS_DIR=./data/uploads
CACHE_DIR=./data/cache

# Training
USE_WSL2=true
WSL2_DISTRO=Ubuntu
MAX_WORKERS=4
BATCH_SIZE=16
DEFAULT_EPOCHS=100

# Inference
CONFIDENCE_THRESHOLD=0.25
IOU_THRESHOLD=0.45
MAX_DETECTIONS=300

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/vsionlab.db

DATA_DIR=D:\VsionLabData\DataDirectory
MODELS_DIR=D:\VsionLabData\Models
EXPORTS_DIR=D:\VsionLabData\Exports